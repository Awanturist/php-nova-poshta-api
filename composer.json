{
  "name": "bladl/nova-poshta-api",
  "description": "PHP implementation of Ukrainian delivery service Nova Poshta API 2.0",
  "type": "library",
  "license": "MIT",
  "authors": [{
    "homepage": "https://github.com/rusted-love",
    "name": "Liakhovskyi Vladyslav",
    "email": "vlad@rusted-labs.org"
  }],
  "keywords": [
    "Нова Пошта",
    "API 2.0"
  ],
  "autoload": {
    "psr-4": {
      "BladL\\NovaPoshta\\": "src"
    }
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon",
    "phpmd": "vendor/bin/phpmd ./src/ text phpmd.ruleset.xml",
    "php-cs": "vendor/bin/php-cs-fixer fix",
    "test": [
      "@phpstan",
      "@phpmd"
    ],
    "fix": [
      "@php-cs"
    ]
  },
  "prefer-stable": true,
  "minimum-stability": "stable",
  "require-dev": {
    "friendsofphp/php-cs-fixer": ">=3.6",
    "phpstan/phpstan": "^1.10",
    "phpmd/phpmd" : "@stable"
  },
  "config": {
    "allow-plugins": {
    }
  },
  "require": {
    "php": ">=8.2",
    "ext-curl": "*",
    "ext-json": "*",
    "bladl/time": "^0.0.1"
  }
}
