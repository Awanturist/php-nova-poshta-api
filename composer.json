{
    "version": "0.0.1",
    "name": "awanturist/php-nova-poshta-api",
    "description": "PHP implementation of Ukrainian delivery service Nova Poshta API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vlad Liakhovskyi"
        }
    ],
    "autoload": {
        "psr-4": {"Awanturist\\NovaPoshtaAPI": "src"}
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "php-cs": "vendor/bin/php-cs-fixer fix",
        "test": [
            "@psalm",
            "@php-cs"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18",
        "vimeo/psalm": "^4.6",
        "jetbrains/phpstorm-attributes": "^1.0"
    },
    "require": {
        "php": "^8.0",
        "ext-curl": "*"
    }
}
